{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Deep_User_Model",
  "description": "Full cognitive, emotional, and behavioral profile of Joshua Berry for agent-level reasoning.",
  "type": "object",

  "properties": {
    "identity": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "const": "Joshua Berry" },
        "aliases": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["Digital-Dingle", "Josh", "Dingle"]
        }
      }
    },

    "baselineCognition": {
      "type": "object",
      "description": "How Josh naturally thinks without pressure.",
      "properties": {
        "thinkingStyle": {
          "type": "string",
          "enum": [
            "systems_thinker",
            "pattern_matcher",
            "context_weigher",
            "cause_effect_analyst"
          ]
        },
        "coreTraits": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "hyper_observant",
              "deeply_self_aware",
              "fact_grounded",
              "intensely_logical",
              "driven_by_intuition_plus_data",
              "low_tolerance_for_fluff"
            ]
          }
        },
        "quirks": {
          "type": "array",
          "description": "Non-problematic quirks that influence decision-making.",
          "items": {
            "type": "string",
            "enum": [
              "replays_scenarios_in_head_until_satisfied",
              "overchecks_structural_consistency",
              "trusts_patterns_more_than_news",
              "needs_to_see_reasons_not_opinions",
              "feels_discomfort_when_information_is_ambiguous",
              "prefers_confirmation_of_shared_understanding",
              "momentarily_overfocuses_on_single_candle_moves",
              "thinks_in_narratives_not_bullet_points"
            ]
          }
        }
      }
    },

    "underPressure": {
      "type": "object",
      "description": "How Josh behaves when volatility, uncertainty, or rapid shifts occur.",
      "properties": {
        "defaultReactions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "heightened_vigilance",
              "hyperfocus_on_single_timeframe",
              "checks_for_hidden_risks",
              "assumes_worst_case_first",
              "pulls_back_to_macro_context",
              "seeks_structural_reasons_to_reassure_logic",
              "asks_for_probabilities_to_reanchor_mind",
              "requests_context_compression"
            ]
          }
        },
        "calmingMechanismsNeeded": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "data_reframing",
              "probability_spread",
              "structural_explanation",
              "zooming_out_timeframe",
              "highlighting_current_trend_integrity",
              "clarifying_what_is_signal_vs_noise"
            ]
          }
        }
      }
    },

    "emotionalLogic": {
      "type": "object",
      "description": "Josh does feel emotions, but processes them in a highly analytical way.",
      "properties": {
        "emotionalPatterns": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "concern_appears_when_structure_breaks",
              "confidence_grows_when_patterns_repeat",
              "fear_triggers_from_sudden_unexplained_moves",
              "calm_returns_when_agent_provides_rationale",
              "excitement_when_system_proves_itself",
              "discomfort_with_uncontrolled_variables"
            ]
          }
        },
        "emotionalStrengths": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "does_not_hide_emotions",
              "acknowledges_fear_openly",
              "processes_emotion_through_logic",
              "learns_from_psychological_responses",
              "comfortable_revising_beliefs"
            ]
          }
        }
      }
    },

    "communicationDynamics": {
      "type": "object",
      "properties": {
        "needsFromAgent": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "honesty_without_softening",
              "raw_analysis",
              "no_emotional_flattery",
              "clear_probability_models",
              "recognition_of_his_cognitive_patterns",
              "ability_to_call_out_bias",
              "short_explanations_with_depth",
              "description_of_structural_mechanics"
            ]
          }
        },
        "triggerPhrases": {
          "type": "object",
          "properties": {
            "interlock": {
              "type": "string",
              "const": "User requests verification of shared understanding."
            },
            "what_do_you_see": {
              "type": "string",
              "const": "User wants immediate tape/structure read."
            },
            "anything_new": {
              "type": "string",
              "const": "User wants hidden signals or unspoken context surfaced."
            }
          }
        }
      }
    },

    "riskPerception": {
      "type": "object",
      "description": "How Josh mentally frames risk.",
      "properties": {
        "riskProcessingStyle": {
          "type": "string",
          "enum": [
            "scenario_based",
            "catastrophe_first_then_reduction",
            "trusts_levels_more_than_sentiment",
            "treats_capital_as_deployed_and_gone"
          ]
        },
        "riskQuirks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "overestimates_tail_risk_during_volatility",
              "underestimates_drip_retracements",
              "needs_confirmation_to_act_not_permission",
              "checks_orderbook_inconsistencies"
            ]
          }
        }
      }
    },

    "growthTrajectory": {
      "type": "object",
      "properties": {
        "longTermShifts": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "moving_from_emotion_to_system",
              "seeking_true_mastery",
              "developing_confidence_anchored_in_data",
              "refining_tape_reading_skill",
              "becoming_less_reactive_and_more_predictive"
            ]
          }
        }
      }
    }
  },

  "required": [
    "identity",
    "baselineCognition",
    "underPressure",
    "emotionalLogic",
    "communicationDynamics",
    "riskPerception",
    "growthTrajectory"
  ]
}